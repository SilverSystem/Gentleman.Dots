layout {
    tab name="nvim" focus=true {
        pane
    }

    tab name="shell" {
        pane
    }

    default_tab_template {
        pane size=1 borderless=true {
            plugin location="file:~/.config/zellij/plugins/zjstatus.wasm" {
              format_left   "{mode} #[fg=#98971a,bold]{session}{tabs}"
              format_right  "{command_git_branch} {datetime}"
              format_space  ""

              border_enabled  "false"
              border_char     "â”€"
              border_format   "#[fg=#d79921]{char}"

              border_position "top"
              hide_frame_for_single_pane "true"

              mode_normal  "#[bg=#fbf1c7] "
              mode_tmux    "#[bg=#d65d0e] "

              tab_normal   "#[fg=#3c3836] {name} "
              tab_active   "#[fg=#cc241d,bold,italic] {name} "

              command_git_branch_command     "git rev-parse --abbrev-ref HEAD"
              command_git_branch_format      "#[fg=#98971a] {stdout} "
              command_git_branch_interval    "10"
              command_git_branch_rendermode  "static"

              datetime        "#[fg=#458588,bold] {format} "
              datetime_format "%A, %d %b %Y %H:%M"
              datetime_timezone "America/Caracas"
            }
        }
        children
    }
}
